// Import all partials
@require './_*.styl'


//Gloabl Styles
html
  box-sizing: border-box
  //vertically align everything
  height: 100%
  margin: 0
  font-size: 10px;

*, *:before, *:after
  box-sizing: inherit

body
  margin 0
  background: #e1e1e1
  font-family: 'montserrat', sans-serif
  //vertically align everything
  -webkit-align-items: center
  -ms-flex-align: center
  align-items: center
  display: -webkit-flex
  display: flex

h1, h2, h3, h4
  padding 0
  margin 0
  color: #000

p, a, li, span
  color: #000

#main
  width: 100%
