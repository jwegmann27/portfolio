//varaibles
bg-color = #fffff3
title-color = #A593E0
text-color = #566270
alt-text-color = #E0E3DA
  
.projects-wrap
  width: 100%
  padding: 2em 0em
  overflow: hidden

.projects-wrap-inner
  display: flex;
  flex-direction: wrap;
  flex-wrap: wrap;
  justify-content: space-around;


.project
  max-width: 425px
  position: relative
  display: block
  margin: 2em
  a
    display: inline-block
    background-color: text-color !important
    overflow: hidden
    border-radius: 10px
    z-index: 5
    height: 245px
    &:hover
      img
        opacity: .3
      h2, p
        z-index: 10
    h2, p
      position: absolute;
      z-index: -1
      left: 50%
      transform: translateX(-50%);
    h2
      top: 20px
      text-decoration: underline
      width: 100%
      text-align: center
      font-size: 2.8em
    p
      top: 35px
      width: 100%
      color: alt-text-color
      font-size: 1.8em
      padding: 1em
    img
      z-index: 5
      width: 100%
      height: 245px
      border-radius: 10px
      transition: .2s opacity ease
