.projects-wrap
  display: flex
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: center;
  width: 60%
  margin: 0 0 0 auto
  padding: 1em

.project
  width: 100%
  position: relative;
  margin: 4em 0
  &:hover
    .project-info
      left: -40%;
  a
    overflow: hidden;
  .project-img
    background-size: cover;
    background-repeat: no-repeat;
    background-position: top;
    min-height: 300px;
  .project-info
    position: absolute;
    width: 40%;
    left: 0;
    top: 0;
    bottom: 0;
    background: #fff;
    padding: 1em;
    z-index: -1;
    transition: left .3s ease;
    &:hover
      .project-info
        left: -40%;
