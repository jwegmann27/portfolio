.projects-wrap
  width: 100%
  overflow: hidden

.projects-wrap-inner
  display: flex;
  flex-direction: wrap;
  flex-wrap: wrap;
  justify-content: space-around;


.project
  max-width: 425px
  position: relative
  display: block
  margin: 2em
  a
    display: inline-block
    background-color: #000000
    overflow: hidden
    border-radius: 10px
    z-index: 5
    height: 245px
    &:hover
      img
        opacity: .3
      h2, p
        z-index: 10
    h2, p
      position: absolute;
      color: #fff
      z-index: -1
      left: 50%
      transform: translateX(-50%);
    h2
      top: 20px
      width: 100%
      text-align: center
      font-size: 2.8em
    p
      bottom: 0
      width: 100%
      font-size: 1.8em
      padding: 1em
    img
      z-index: 5
      width: 100%
      height: 245px
      border-radius: 10px
      transition: .2s opacity ease
